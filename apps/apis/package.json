{
  "name": "apis",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "serve": "tsx watch ./src/main.ts ./src/tracing.ts",
    "check-types": "tsc --noEmit",
    "build": "rm -rf dist && esbuild ./src/main.ts ./src/tracing.ts --bundle --outdir=dist --minify --platform=node",
    "build:dev": "rm -rf dist && esbuild ./src/main.ts ./src/tracing.ts --bundle --outdir=dist --sourcemap --platform=node",
    "docker-build:dev": "docker build -t todo-apis:dev .",
    "postdocker-build:dev": "pnpm run deploy:local",
    "deploy:local": "helm upgrade --install todo-apis ./infra  --namespace todo-apis --create-namespace --force --set image.repository=todo-apis --set image.tag=dev --set image.pullPolicy=Never",
    "postdeploy:local": "kubectl rollout restart deployment todo-apis -n todo-apis",
    "uninstall-release": "helm uninstall todo-apis -n todo-apis"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.2",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/instrumentation-mysql2": "^0.50.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-prom-bundle": "^8.0.0",
    "mysql-conn": "workspace:*",
    "prom-client": "^15.1.3",
    "rabbit-mq-conn": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^24.2.0",
    "esbuild": "^0.25.9",
    "tsx": "^4.20.4"
  }
}
